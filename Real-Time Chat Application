from flask import Flask
from flask_socketio import SocketIO, send

# Initialize Flask App
app = Flask(__name__)
socketio = SocketIO(app, cors_allowed_origins="*")

# Predefined chatbot responses
chatbot_responses = {
    "hello": "Hello! How can I assist you today?",
    "hi": "Hey there! ðŸ˜Š",
    "how are you": "I'm a bot, but I'm doing great! What about you?",
    "bye": "Goodbye! Have a fantastic day! ðŸš€",
    "help": "I can assist you with any query. Just type and ask!",
    "what is your name": "I'm ChatBot, your AI assistant!",
    "thank you": "You're welcome! Always here to help. ðŸ˜Š"
}

@app.route('/')
def index():
    return """
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Professional Chat</title>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.js"></script>
        <style>
            body {
                font-family: Arial, sans-serif;
                background: linear-gradient(to right, #141E30, #243B55);
                color: white;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
                margin: 0;
            }
            #chat-container {
                width: 400px;
                height: 500px;
                background: #1E1E2F;
                border-radius: 10px;
                display: flex;
                flex-direction: column;
                box-shadow: 0 4px 10px rgba(0,0,0,0.3);
            }
            #chat-box {
                flex: 1;
                padding: 10px;
                overflow-y: auto;
                display: flex;
                flex-direction: column;
                gap: 10px;
                scrollbar-width: thin;
                scrollbar-color: #888 #1E1E2F;
            }
            .message {
                max-width: 80%;
                padding: 10px;
                border-radius: 10px;
                word-wrap: break-word;
                margin-bottom: 5px;
            }
            .user {
                align-self: flex-end;
                background: #4CAF50;
                color: white;
            }
            .bot {
                align-self: flex-start;
                background: #333;
                color: white;
            }
            #input-container {
                display: flex;
                padding: 10px;
                background: #252540;
                border-top: 1px solid #444;
            }
            #message {
                flex: 1;
                padding: 10px;
                border: none;
                border-radius: 5px;
                outline: none;
            }
            #send {
                background: #4CAF50;
                color: white;
                border: none;
                padding: 10px 15px;
                margin-left: 10px;
                cursor: pointer;
                border-radius: 5px;
                transition: 0.3s;
            }
            #send:hover {
                background: #388E3C;
            }
        </style>
    </head>
    <body>
        <div id="chat-container">
            <div id="chat-box"></div>
            <div id="input-container">
                <input type="text" id="message" placeholder="Type a message..." autofocus>
                <button id="send">Send</button>
            </div>
        </div>

        <script>
            var socket = io.connect('http://' + document.domain + ':' + location.port);

            socket.on('message', function(msg) {
                var chatBox = document.getElementById("chat-box");
                var messageDiv = document.createElement("div");
                messageDiv.classList.add("message");

                if (msg.startsWith("Chatbot:")) {
                    messageDiv.classList.add("bot");
                    msg = msg.replace("Chatbot: ", "");
                } else {
                    messageDiv.classList.add("user");
                }

                messageDiv.textContent = msg;
                chatBox.appendChild(messageDiv);
                chatBox.scrollTop = chatBox.scrollHeight;
            });

            document.getElementById("send").onclick = function() {
                var msg = document.getElementById("message").value.trim();
                if (msg) {
                    socket.send(msg);
                    document.getElementById("message").value = "";
                }
            };

            document.getElementById("message").addEventListener("keypress", function(event) {
                if (event.key === "Enter") {
                    document.getElementById("send").click();
                }
            });
        </script>
    </body>
    </html>
    """

@socketio.on('message')
def handle_message(msg):
    print(f"Message received: {msg}")
    send(msg, broadcast=True)  # Broadcast message to all users

    # Chatbot auto-response
    response = chatbot_responses.get(msg.lower(), None)
    if response:
        send(f"Chatbot: {response}", broadcast=True)

if __name__ == '__main__':
    socketio.run(app, debug=True, host='127.0.0.1', port=5000)
